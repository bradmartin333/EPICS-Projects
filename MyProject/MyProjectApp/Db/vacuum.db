# Vacuum System Status
record(calc, "$(user):VAC:AVG_PRESSURE") {
    field(DESC, "Average System Pressure")
    field(CALC, "(A+B+C+D+E+F+G+H)/8")
    field(INPA, "$(user):VAC:INJ:P01 CP")
    field(INPB, "$(user):VAC:ACC:P01 CP")
    field(INPC, "$(user):VAC:ACC:P04 CP")
    field(INPD, "$(user):VAC:BL:P01 CP")
    field(INPE, "$(user):VAC:BL:P04 CP")
    field(INPF, "$(user):VAC:TGT:P01 CP")
    field(INPG, "$(user):VAC:TGT:P04 CP")
    field(INPH, "$(user):VAC:INJ:P04 CP")
    field(EGU,  "Torr")
    field(PREC, "2")
}

record(bi, "$(user):VAC:STATUS") {
    field(DESC, "Vacuum System Status")
    field(ZNAM, "FAULT")
    field(ONAM, "OK")
    field(VAL,  "1")
}
